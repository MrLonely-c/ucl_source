<com.example.helloworld.CustomToolBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    app:left_tv_visible="true"
    app:left_tv_text="返回"
    app:right_btn_visible="true"
    app:right_tv_visible="true"
    app:right_tv_text="菜单"
    app:title_visible="true"
    app:title_text="个人信息修改"
    tools:context="com.example.helloworld.producer.ProducerActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="160dp"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="姓名" />

                <EditText
                    android:id="@+id/sell_name"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="#FFFFFF"
                    android:text="科比·布莱恩特"
                    android:textAlignment="center" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FF4081" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="160dp"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="系统人员编号" />

                <EditText
                    android:id="@+id/sell_id"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="6881"
                    android:textAlignment="center"

                    android:textSize="18dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FF4081" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="160dp"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="身份证号" />

                <EditText
                    android:id="@+id/idno_seller"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="345679198423456910"
                    android:textAlignment="center"


                    android:textSize="18dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FF4081" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="160dp"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="注册时间" />

                <EditText
                    android:id="@+id/intime"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="2013.12.6"
                    android:textAlignment="center"


                    android:textSize="18dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FF4081" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="160dp"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="联系方式" />

                <EditText
                    android:id="@+id/phonenum"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="13456891022"

                    android:textAlignment="center"
                    android:textSize="18dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FF4081" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="160dp"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="工作单位" />

                <EditText
                    android:id="@+id/place"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="华联超市九龙湖分店一店"
                    android:textAlignment="center"

                    android:textSize="18dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FF4081" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FF4081" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="160dp"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="重新上传工作证" />

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="match_parent"
                    android:id="@+id/work_id"/>

                <Button
                    android:id="@+id/photo_seller_2"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_select" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="160dp"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="账号" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="13456891022"

                    android:textAlignment="center"
                    android:textSize="18dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FF4081" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="160dp"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="当前密码" />

                <EditText
                    android:id="@+id/cur_password"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text="***************"

                    android:textAlignment="center"
                    android:textSize="18dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FF4081" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="160dp"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="新密码" />

                <EditText
                    android:id="@+id/new_pass"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:hint="请输入新密码"

                    android:textAlignment="center"
                    android:textSize="18dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FF4081" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1">

                <TextView
                    android:layout_width="160dp"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="确认密码" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:gravity="center"
                    android:text=""

                    android:textAlignment="center"
                    android:textSize="18dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#FF4081" />

            <Button
                android:id="@+id/submit_sellerchange"
                android:layout_width="150dip"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="6dip"
                android:layout_marginBottom="6dip"
                android:background="@drawable/shape"

                android:text="提交"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>
</com.example.helloworld.CustomToolBar>