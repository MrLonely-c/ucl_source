<com.example.helloworld.CustomToolBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    app:left_tv_visible="true"
    app:left_tv_text="返回"
    app:right_btn_visible="true"
    app:right_tv_visible="true"
    app:right_tv_text="菜单"
    app:title_visible="true"
    app:title_text="加工人员操作界面"
    tools:context="com.example.helloworld.producer.ProducerActivity">
    <Button
        android:id="@+id/bt_process_1"
        android:text="@string/user_inf"
        android:drawable="@drawable/icon_calendar"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dip"
        android:drawableLeft="@drawable/pg2"
        android:textColor="@android:color/black"
        android:background="@drawable/shape2"/>

    <Button
        android:drawableLeft="@drawable/pg6"
        android:id="@+id/bt_process_2"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dip"
        android:text="加工情况录入"
        android:textColor="@android:color/black"
        android:background="@drawable/shape2"/>

    <Button
        android:drawableLeft="@drawable/pg3"
        android:id="@+id/bt_process_3"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dip"
        android:text="运输申请"
        android:textColor="@android:color/black"
        android:background="@drawable/shape2"/>


</com.example.helloworld.CustomToolBar>