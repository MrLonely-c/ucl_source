<com.example.helloworld.CustomToolBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:icoand="http://widgets.demo.com"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    app:left_tv_visible="true"
    app:left_tv_text="返回"
    app:right_btn_visible="true"
    app:right_tv_visible="true"
    app:right_tv_text="菜单"
    app:title_visible="true"
    app:title_text="加工情况录入"
    tools:context="com.example.helloworld.producer.ProducerActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >

        <TextView
            android:text="加工环节"

            android:layout_width="120dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />

        <Spinner

            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:id="@+id/spinner_1"
            android:gravity="center"
            android:textSize="18dp"

            android:textAlignment="center"
            android:background="#FFFFFF">
        </Spinner>


    </LinearLayout>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#FF4081"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >

        <TextView
            android:text="加工人员"

            android:layout_width="120dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/processer"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="孙笑川"
            android:textSize="18dp"

            android:textAlignment="center"
            android:background="#FFFFFF"/>
    </LinearLayout>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#FF4081"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >

        <TextView
            android:text="人员编号"

            android:layout_width="120dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/processer_num"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="201899021323"
            android:textSize="18dp"

            android:textAlignment="center"
            android:background="#FFFFFF"/>
    </LinearLayout>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#FF4081"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >

        <TextView
            android:text="加工单位"

            android:layout_width="120dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/location"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="九龙湖第一屠宰场"
            android:textSize="18dp"

            android:textAlignment="center"
            android:background="#FFFFFF"/>
    </LinearLayout>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#FF4081"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >

        <TextView
            android:text="加工对象原id"

            android:layout_width="120dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/old_id"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textSize="18dp"

            android:textAlignment="center"
            android:background="#FFFFFF"/>
    </LinearLayout>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#FF4081"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >

        <TextView
            android:text="加工分类数"

            android:layout_width="120dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/total_kind"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textSize="18dp"

            android:textAlignment="center"
            android:background="#FFFFFF"/>
    </LinearLayout>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#FF4081"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >

        <TextView
            android:text="加工分类部位\编号"

            android:layout_width="120dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/kind_num"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textSize="18dp"

            android:textAlignment="center"
            android:background="#FFFFFF"/>
    </LinearLayout>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#FF4081"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >

        <TextView
            android:text="加工后id"

            android:layout_width="120dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/new_id"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text=""
            android:textSize="18dp"

            android:textAlignment="center"
            android:background="#FFFFFF"/>
    </LinearLayout>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#FF4081"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        >

        <Button
            android:id="@+id/submit"
            android:layout_marginLeft="20dip"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:text="提交"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/shape"
            android:layout_marginTop="14dip"
            android:layout_gravity="center"
            android:layout_marginBottom="20dip"/>
        <Button
            android:id="@+id/next"
            android:layout_width="150dip"
            android:layout_height="wrap_content"
            android:text="下一个"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/shape"
            android:layout_marginTop="14dip"
            android:layout_marginRight="20dip"
            android:layout_gravity="center"
            android:layout_marginLeft="20dip"
            android:layout_marginBottom="20dip"/>
    </LinearLayout>


</com.example.helloworld.CustomToolBar>