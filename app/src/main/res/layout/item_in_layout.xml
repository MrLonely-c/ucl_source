<com.example.helloworld.CustomToolBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    app:left_tv_visible="true"
    app:left_tv_text="返回"
    app:right_btn_visible="true"
    app:right_tv_visible="true"
    app:right_tv_text="菜单"
    app:title_visible="true"
    app:title_text="商品信息录入"
    tools:context="com.example.helloworld.producer.ProducerActivity">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                >

                <TextView
                    android:text="商品名称"

                    android:layout_width="120dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/name"
                    android:layout_width="240dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:text="朔州神仙羊肉"
                    android:textAlignment="center"
                    android:background="#FFFFFF"/>

            </LinearLayout>
            <View  android:layout_height="1px"
                android:layout_width="match_parent"
                android:background="#FF4081"
                />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >

        <TextView
            android:text="商品编号"

            android:layout_width="120dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/productionid"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="3200000002"
            android:textSize="18dp"

            android:textAlignment="center"
            android:background="#FFFFFF"/>
    </LinearLayout>
    <View  android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="#FF4081"
        />

