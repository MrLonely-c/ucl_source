                android:layout_height="40dp"
              >

                <TextView
                    android:text="商品售价"

                    android:layout_width="120dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />
                <EditText
                    android:id="@+id/price"

                    android:layout_width="240dp"
