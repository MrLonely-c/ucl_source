        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dip"
        android:text="运输人员"
        android:textColor="@android:color/black"
        android:background="@drawable/shape2"/>

    <Button
        android:id="@+id/bt_3"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dip"
        android:text="检疫人员"
        android:background="@drawable/shape2"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/bt_4"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dip"
        android:text="加工人员"
        android:background="@drawable/shape2"
        android:textColor="@android:color/black" />
    <Button
        android:id="@+id/bt_5"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dip"
        android:text="销售人员"
        android:background="@drawable/shape2"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/bt_6"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dip"
        android:text="普通用户"
        android:background="@drawable/shape2"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/bt_7"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
